
.chuck {
  position fixed
  right 15px
  bottom 0
  width 100%
}

.chuck__image {
  position absolute
  transform rotateY(180deg)

  transition all 0.3s
  cursor pointer
  bottom -30px
  right 0
}


.animation-jumping {
  animation-name animation-jumping
  animation-duration 15s
  animation-delay 1s
  animation-iteration-count infinite
  animation-direction normal
  animation-timing-function ease-out
  animation-fill-mode forwards
}

.animation-focused {
  animation-name animation-focused
  animation-duration 0.4s
  animation-delay 0s
  animation-iteration-count 1
}

@keyframes animation-jumping {
  0%   { bottom: -30px; }
  3%   { bottom: -20px; }
  7%   { bottom: -20px; }
  10%  { bottom: -30px; }
  100% { bottom: -30px; }
}

@keyframes animation-focused {
  0%   { bottom: 0px;   }
  100% { bottom: -20px; }
}


.chuck__joke {
  position absolute
  display block
  padding 20px

  font-family ralewayLight

  border 1px solid #f5ecd4
  border-radius 6px
  background #fffefb

  visibility hidden
  transition all 0.5s 0.2s
  opacity 0

  max-width 320px
  bottom 10px
  right 60px

  @media only screen and (max-width: mobileResolution) {
    & {
      max-width 180px
    }
  }

  &::before, &::after {
    position absolute
    display block
    border-width 10px 0px 10px 14px
    border-style solid
    bottom 8px
    height 2px
  }

  &::before {
    content ''
    border-color transparent transparent transparent #f5ecd4
    right -15px
  }

  &::after {
    content ''
    border-color transparent transparent transparent #fffefb
    right -13px
  }
}


.chuck__close {
  position absolute
  color #999
  font-size 13px

  text-align center
  line-height 20px
  cursor pointer

  height 20px
  width 20px

  right 4px
  top 4px
}

.chuck__joke--open {
  visibility visible
  opacity 1
  bottom 30px
}
